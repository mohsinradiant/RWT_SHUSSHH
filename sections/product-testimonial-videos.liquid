<h2 class="section-heading">{{ section.settings.section_heading }}</h2>
<div class="page-width product-testimonials-container">
  {% for video in product.metafields.content.product_testimonial_videos %}
    <div class="product-testimonial-block" id="product-testimonial-{{ block.id }}">
      <img
        src="{{ video.value.placeholder | img_url: 'medium' }}"
        class="product-testimonial-image"
      >
      <div class="product-testimonial-video-container">
        {{ video.value.video.value | video_tag: autoplay: false, loop: true, muted: false, controls: true }}
      </div>
    </div>
  {% endfor %}
</div>
<style>
  .product-testimonials-container {
    display: flex;
    gap: 10px;
    justify-content: start;
    align-items: center;
  }
  .product-testimonial-block {
    width: 24.5%;
  }
  .product-testimonial-block img {
    width: 100%;
    height: auto;
  }
  .product-testimonial-video-container {
    width: 100%;
    height: auto;
  }
  .product-testimonial-video-container video {
    width: 100%;
    height: auto;
    border-radius: 6px;
  }
  @media (max-width: 850px) {
    .product-testimonials-container {
      overflow-x: auto;
    }
    .product-testimonial-block {
      min-width: 300px;
    }
    .product-testimonials-container::-webkit-scrollbar {
      display: none;
    }
    .product-testimonials-container {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Select all testimonial blocks
    const testimonialBlocks = document.querySelectorAll('.product-testimonial-block');

    testimonialBlocks.forEach((block) => {
      const image = block.querySelector('.product-testimonial-image');
      const videoContainer = block.querySelector('.product-testimonial-video-container');
      const video = videoContainer.querySelector('video');

      // Hide the video container initially
      videoContainer.style.display = 'none';

      // Add click event to the image
      image.addEventListener('click', () => {
        image.style.display = 'none'; // Hide the image
        videoContainer.style.display = 'block'; // Show the video container
        video.play(); // Play the video
      });

      // Add pause event to the video
      video.addEventListener('pause', () => {
        videoContainer.style.display = 'none'; // Hide the video container
        image.style.display = 'block'; // Show the image
      });
    });
  });
</script>
