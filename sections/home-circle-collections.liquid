<script>
  document.addEventListener('DOMContentLoaded', function () {
    gsap.registerPlugin(ScrollTrigger);

    gsap.utils.toArray('.header-category img').forEach((img) => {
      gsap.fromTo(
        img,
        { opacity: 0, scale: 0.7 }, // Starts smaller & skewed
        {
          opacity: 1,
          scale: 1.05, // Slightly larger before settling
          duration: 1, // Increased for smoother effect
          ease: 'elastic.out(1.3, 0.6)', // Longer, more fluid wobble
          scrollTrigger: {
            trigger: img,
            start: 'top 85%',
            toggleActions: 'play none none reverse',
          },
        }
      );
    });
  });
</script>
