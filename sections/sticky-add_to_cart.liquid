<div class="sticky-atc-container">
  <img class="go-to-top-button" src="https://cdn.shopify.com/s/files/1/0767/6297/2470/files/Group_323.png?v=1738057124">
  <div class="page-width">
    {%- assign product_form_id = 'product-form-' | append: section.id -%}
    {%- render 'sticky-price', product: product, use_variant: true, price_class: 'price--large' -%}
    <div class="sticky-atc-container-buy-button">
      {%- render 'buy-buttons', product: product, product_form_id: product_form_id, section_id: section.id -%}
    </div>
  </div>
</div>
<style>
  .sticky-atc-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 90;
  }
  .go-to-top-button {
    transform: rotate(90deg);
  }
  .sticky-atc-container img {
    width: 50px;
    border-radius: 10px;
  }
  .price__container_parent {
    display: flex;
    gap: 5px;
  }
  .sticky-atc-container .page-width {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border: solid 1px #382d43;
    width: 100%;
    border-radius: 15px 15px 0 0;
    padding: 15px 5rem;
    gap: 20px;
  }
  .sticky-atc-container .page-width .price--large {
    width: fit-content;
    display: flex;
    gap: 13px;
    justify-content: center;
    align-items: center;
  }
  .sticky-atc-container .page-width .price--on-sale .price__sale {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .sticky-atc-container-buy-button {
    width: 45%;
  }
  .sticky-atc-container .price-item--sale,
  .sticky-atc-container .page-width .price--large p {
    font-size: 1.5rem;
    font-weight: 500;
    font-family: 'Kanit', sans-serif;
    letter-spacing: 0;
    line-height: 2.5rem;
    margin: 0;
  }
  .sticky-atc-container .price--on-sale .price-item--regular {
    font-size: 1.5rem;
    font-weight: 500;
    font-family: 'Kanit', sans-serif;
    letter-spacing: 0;
    line-height: 2.5rem;
    margin: 0;
    opacity: 0.7;
  }
  @media (max-width: 500px) {
    .sticky-atc-container .page-width {
      padding: 10px;
    }
  }
</style>
