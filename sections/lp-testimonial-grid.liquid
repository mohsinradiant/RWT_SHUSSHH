<div class="lp-testimonial-section">
  <h2 class="page-width section-heading">{{ section.settings.section_heading }}</h2>
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="lp-testimonial-grid-item">
            {% if block.settings.image %}
              <div class="lp-testimonial-image-container">
                <img
                  class="lp-testimonial-image"
                  src="{{ block.settings.image | image_url }}"
                  alt="{{ block.settings.title }}"
                >
              </div>
            {% endif %}
            <h1 class="testimonial-name">{{ block.settings.name }}</h1>
            <img
              class="testimonial-stars-image"
              src="https://cdn.shopify.com/s/files/1/0767/6297/2470/files/Group_351.png?v=1739098256"
            >
            <h3 class="lp-testimonial-title">{{ block.settings.title }}</h3>
            <p class="lp-testimonial-description">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

<style>
  .lp-testimonial-section .section-heading,
  .lp-banner-container .section-heading {
    color: #dd9740;
    font-size: 5rem;
    text-align: center;
  }
  .testimonial-name {
    font-weight: 500;
    font-size: 2.6rem;
  }
  .testimonial-stars-image {
    width: 30%;
    height: auto;
    margin-top: 5px;
  }
  .lp-testimonial-section {
    padding: 20px;
    background: linear-gradient(to right, #000000, #2e0202);
    text-align: center;
  }
  .swiper-container {
    width: 100%;
    position: relative;
    margin: auto;
    overflow: hidden;
  }
  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .lp-testimonial-grid-item {
    background: #fff;
    border-radius: 8px;
    padding: 16px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    text-align: center;
  }
  .lp-testimonial-grid-item p {
    font-size: 1.5rem;
    line-height: 2.3rem;
    font-weight: 300;
  }
  .swiper-button-prev,
  .swiper-button-next {
    color: #fff;
  }
  .lp-testimonial-section .section-heading,
  .lp-banner-container .section-heading {
    text-transform: uppercase;
  }
  @media (max-width: 750px) {
    .lp-testimonial-grid-item p {
      font-size: 1.3rem;
      line-height: 1.8rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.swiper-container', {
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      centeredSlides: true,
      slidesPerView: 'auto',
      spaceBetween: 30,
      breakpoints: {
        1024: {
          slidesPerView: 2.2,
        },
        768: {
          slidesPerView: 1,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "LP Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Discover Whatâ€™s Making Everyone Go Wild!"
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "Grid Item",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LP Testimonial Slider"
    }
  ]
}
{% endschema %}
