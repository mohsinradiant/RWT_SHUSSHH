<section class="swiper-carousel-section">
  <h2 class="section-heading">{{ section.settings.section_heading }}</h2>
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="carousel-item">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.heading }}">
            {% endif %}
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.subheading }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<style>
  .swiper-carousel-section {
    text-align: center;
    background: linear-gradient(to right, #b30000, #800000);
    color: white;
    padding: 40px 0;
  }
  .swiper-container {
    width: 80%;
    margin: auto;
    overflow: hidden;
  }
  .carousel-item img {
    width: 150px;
    height: auto;
    display: block;
    margin: 0 auto 10px;
  }
  .swiper-button-prev,
  .swiper-button-next {
    color: white;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.swiper-container', {
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  });
</script>
{% schema %}
{
  "name": "What's in the Box",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "WHAT'S IN THE BOX"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Carousel Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Item Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Add a little bit of body text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "What's in the Box"
    }
  ]
}
{% endschema %}
