<div
  style="
    background: linear-gradient(
      {{ section.settings.gradient_angle }}deg,
      {{ section.settings.gradient_color_1 }},
      {{ section.settings.gradient_color_2 }}
    );
  "
  class="home-no-padding-banner"
>
  <img
    class="no-padding_desktop_image"
    src="{{ section.settings.image | img_url: 'master' }}"
    alt="No Padding Packaging"
  >
  <img
    class="no-padding_mobile_image"
    src="{{ section.settings.mobile_image | img_url: 'master' }}"
    alt="No Padding Packaging"
  >
  <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
</div>

<style>
  @keyframes glowing {
    0% {
      box-shadow: 0 0 {{ section.settings.glow_intensity | default: 5 }}px rgba({{ section.settings.glow_color | color_extract: 'red' }}, {{ section.settings.glow_color | color_extract: 'green' }}, {{ section.settings.glow_color | color_extract: 'blue' }}, 0.5);
    }
    50% {
      box-shadow: 0 0 {{ section.settings.glow_intensity | default: 20 }}px rgba({{ section.settings.glow_color | color_extract: 'red' }}, {{ section.settings.glow_color | color_extract: 'green' }}, {{ section.settings.glow_color | color_extract: 'blue' }}, 1),
                  0 0 {{ section.settings.glow_intensity | default: 40 }}px rgba({{ section.settings.glow_color | color_extract: 'red' }}, {{ section.settings.glow_color | color_extract: 'green' }}, {{ section.settings.glow_color | color_extract: 'blue' }}, 0.7);
    }
    100% {
      box-shadow: 0 0 {{ section.settings.glow_intensity | default: 5 }}px rgba({{ section.settings.glow_color | color_extract: 'red' }}, {{ section.settings.glow_color | color_extract: 'green' }}, {{ section.settings.glow_color | color_extract: 'blue' }}, 0.5);
    }
  }

  .home-no-padding-banner {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    position: relative;
    overflow: hidden;
    padding: 50px 0;
    margin: 0;
  }

  .home-no-padding-banner img {
    border-radius: 30px;
    width: 95%;
    height: auto;
    animation: glowing 2s infinite alternate ease-in-out;
  }
  .home-no-padding-banner a {
    position: absolute;
    text-decoration: none;
    bottom: 15%;
    font-size: 1.6rem !important;
    padding: 1.3rem 3rem;
    background-color: #ffb800;
    color: #333333;
    border-radius: 800px;
    border: 0;
    right: 5.5%;
    font-weight: 700;
  }
  .no-padding_desktop_image {
    display: flex;
  }
  .no-padding_mobile_image {
    display: none;
  }
  @media (max-width: 850px) {
    .no-padding_desktop_image {
      display: none;
    }
    .no-padding_mobile_image {
      display: flex;
    }
    .home-no-padding-banner {
      padding: 30px 0;
    }
    .home-no-padding-banner a {
      bottom: 9%;
    }
  }
  @media (max-width: 750px) {
    .home-no-padding-banner a {
      left: unset;
      right: unset;
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    gsap.registerPlugin(ScrollTrigger);

    const ctaButton = document.querySelector('.home-no-padding-banner a');

    // Entrance shake when the button appears in the viewport
    gsap.from(ctaButton, {
      opacity: 0,
      y: 20, // Slight movement from below
      duration: 0.8,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: ctaButton,
        start: 'top 85%',
        toggleActions: 'play none none reverse',
        onEnter: () => {
          gsap.to(ctaButton, {
            x: -5,
            repeat: 3,
            yoyo: true,
            duration: 0.1,
            ease: 'power1.inOut',
          });
        },
      },
    });

    // Small shake effect when the button is clicked
    ctaButton.addEventListener('click', function () {
      gsap.to(ctaButton, {
        x: -3,
        repeat: 2,
        yoyo: true,
        duration: 0.08,
        ease: 'power1.inOut',
      });
    });
  });
</script>
{% schema %}
{
  "name": "No Padding Banner",
  "settings": [
    {
      "type": "color",
      "id": "gradient_color_1",
      "label": "Gradient Color 1"
    },
    {
      "type": "color",
      "id": "gradient_color_2",
      "label": "Gradient Color 2"
    },
    {
      "type": "range",
      "id": "gradient_angle",
      "label": "Gradient Angle (degrees)",
      "min": 0,
      "max": 360,
      "step": 15,
      "default": 90
    },
    {
      "type": "color",
      "id": "glow_color",
      "label": "Glow Color",
      "default": "#ffb800"
    },
    {
      "type": "range",
      "id": "glow_intensity",
      "label": "Glow Intensity",
      "min": 5,
      "max": 50,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "animation_speed",
      "label": "Animation Speed (seconds)",
      "min": 1,
      "max": 5,
      "step": 0.5,
      "default": 2
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHECK PACKAGING"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "No Padding Banner"
    }
  ]
}
{% endschema %}
