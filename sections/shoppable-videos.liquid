    {
      "type": "video_product",
      "name": "Video with Product",
      "settings": [
        {
          "type": "video",
          "id": "video_url",
          "label": "Video"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Placeholder"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shoppable Videos"
    }
  ]
}
{% endschema %}
